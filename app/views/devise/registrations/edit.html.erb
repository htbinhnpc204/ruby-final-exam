<div id="items">
  <div class="container w-50">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <%= link_to :back do%>
        <i class="fa fa-arrow-left me-3"></i>
          <%end %>
        <h3>Profile</h3>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="w-50">
              <div class="form-group mb-1">
                <%= f.email_field :email, autofocus: false, autocomplete: "email", disabled: "disabled", class: "form-control" %>
              </div>

              <div class="form-group mb-1">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Họ và tên", class: "form-control"  %>
              </div>

              <div class="form-group mb-1">
                <%= f.text_field :avatar_link, autofocus: true, autocomplete: "avatar_link", placeholder: "Link avatar", class: "form-control" %>
              </div>
            </div>
            <div class="w-25  m-auto">
              <img src="<%= current_user.avatar_link %>" id="img_avatar" alt="Avatar..." width="120" height="120" class="rounded-circle border border-black border-2">
            </div>
            <script>
              $('#user_avatar_link').change(function (){
                  console.log($(this).val())
                  $('#img_avatar').attr('src', $(this).val())
              })
            </script>
          </div>

          <hr>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group mb-1">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (leave blank if you don't want to change it)", class: "form-control"  %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
            <% end %>
          </div>

          <div class="form-group mb-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation, class: "form-control"  %>
          </div>

          <div class="form-group mb-1">
            <small class="form-text text-muted">(we need your current password to confirm your changes)</small>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: :current_password  %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "btn btn-success mt-2" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <h3>Cancel my account</h3>
        <span>Unhappy?
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"btn btn-danger" %>
        </span>
      </div>
    </div>
  </div>

</div>
