<div class="wrapper">
  <div class="logo">
    <i class="fab fa-github fa-4x"></i>
  </div>
  <div class="text-center mt-3 mb-3 name">
    Sign in
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "p-3 mt-3") do |f| %>
    <div class="form-field d-flex align-items-center">
      <span class="far fa-user"></span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>
    <div class="form-field d-flex align-items-center">
      <span class="fas fa-key"></span>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>
    <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    </div>
    <%= f.button "Login", type: "submit", :class=> "btn btn-primary" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

